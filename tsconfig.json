{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "diagnostics": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "baseUrl": "./packages",
    "lib": [
      "es2020",
      "dom",
      "esnext.asynciterable"
    ],
    "types": ["@dcl/posix", "segment-analytics", "offscreencanvas"],
    "typeRoots": ["./node_modules"],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "node_modules/@dcl/ecs-quests"
  ],
  "files": [
    "node_modules/@dcl/ecs-quests/@dcl/mappings.ts",
    "node_modules/@dcl/ecs-quests/@dcl/types.ts",
  ]
}
